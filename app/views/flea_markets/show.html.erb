<div class="market_sharing">
  <div
    class="fb-like"
    data-share="true"
    data-width="450"
    data-show-faces="true">
  </div>
</div>


<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
  <li role="presentation" class="active"><a href="#flea-info" aria-controls="flea-info" role="tab" data-toggle="tab">MainInfo</a></li>
  <li class="map-tab" role="presentation"><a href="#location" aria-controls="location" role="tab" data-toggle="tab" data-lat="<%= @flea_market.latitude %>" data-lon="<%= @flea_market.longitude %>">LocationInfo</a></li>
  <li role="presentation" class="sns-comment"><a href="#comments" aria-controls="comments" role="tab" data-toggle="tab">Comments</a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="flea-info">
    <div class="flea_market_tag">
      <% @flea_market.fleamarket_tags.each do |tag| %>
        <div class="label label-primary"><%= tag.tag_name %> </div>
      <% end %>
    </div>

    <div class="flea-info-detail">
      <div class="market_name"> <%= @flea_market.market_name %> </div>
      <div class="market_daterange"> <%= @flea_market.start_date.strftime("%F %H:%M") %> ~ <%= @flea_market.end_date.strftime("%F %H:%M ") %> </div>
      <div class="market_memo"><%= @flea_market.memo %></div>
    </div>
    <div class="flea-info-img">
      <% if @flea_market.content_images.present? %>
        <% @flea_market.content_images.each do |img| %>
          <div class="img">
            <%= image_tag img.image_url, alt: "Test", class: "img" if img.image.present? %>
          </div>
        <% end %>
      <% else %>
        <div class="img">
          <%= image_tag "http://talkimg.imbc.com/TVianUpload//tvian/image/2015/10/10/IhjX4gdqTjQq635800827987838901.jpg", alt: "Test", class: "img" %> 
        </div>
      <% end %>
    </div>
  </div>

  <div role="tabpanel" class="tab-pane" id="location">
    
        <div class="location-group ">
          <div class="location-map col-sm-11">
           <% if @flea_market.have_location? %>

        <%#= render "google_map" %>

        <%= render "daum_map" %>

      <% else %>

            <%= image_tag "no_location_info.png", alt: "NoLocation", class: "img"  %>

      <% end %>
          </div>
          <div class="location-info col-sm-11">
            <div class="market_location none"><%= @flea_market.location %> <%= @flea_market.latitude %>, <%= @flea_market.longitude %></div>
          </div>
        </div>


  </div>

  <div role="tabpanel" class="tab-pane" id="comments">
    COMMENTS

    <div id="disqus_thread"></div>
    <script>
      /**
