  </div>
</div>

<% if false &&  @recommend.present? %>
  <div id="recommend">
    <div id="recommend-title">Recommed</div>
    <% @recommend.each do |rec| %>
      <div class="col-md-4 col-sm-6 col-xs-12 recommend-market">
        <%=  rec.market_name %>
      </div>
    <% end %>
  </div>
<% end %>



