<%= form_for [:admin, @parsing_filter] do |f| %>


  <div class="form-group row">
    <label class="col-form-label col-sm-2"><%= t("admin.common.is_work") %></label>
    <div class="controls col-sm-6">
      <div class="form-check">
        <label class="form-check-label">
          <%= f.radio_button :is_work, 0 %>
          <%= f.label :is_work, t("admin.common.not_work"), value: 0 %>
        </label>
        <label class="form-check-label">
          <%= f.radio_button :is_work, 1 %>
          <%= f.label :is_work, t("admin.common.work"), value: 1 %>
        </label>
      </div>
    </div>
  </div>


  <div class="form-group row">
    <label class="col-form-label col-sm-2">City</label>
    <div class="controls col-sm-6">
      <%= f.collection_select :keyword_type, City.all, :id, :name, {}, { class: "form-control"} %>
    </div>
  </div>


  <div class="form-group row">
    <label class="col-form-label col-sm-2">Tag </label>
    <div class="controls col-sm-6">
      <%= f.text_field :keyword, class: "form-control"    %>
    </div>
  </div>



  <div class="form-actions">
    <%= f.submit "Update", :class => "btn btn-success" %>
  </div>


<% end %>
